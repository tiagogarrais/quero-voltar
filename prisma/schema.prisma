generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo baseado no esquema recomendado para NextAuth + Prisma
model Account {
  id                 String    @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?   @db.Text
  access_token       String?   @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?   @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  profile       Usuario?  // Perfil do usuário (opcional)
  loja          Loja?     // Informações da loja (opcional)
}

model Usuario {
  id                String   @id @default(uuid())
  userId            String   @unique // Relacionamento 1:1 com User
  fullName          String?  // Nome completo editável
  birthDate         DateTime? // Data de nascimento
  cpf               String?  @unique // CPF único
  whatsapp          String?  // Número de WhatsApp (opcional)
  whatsappCountryCode String? @default("55") // Código DDI do país (padrão Brasil)
  whatsappConsent   Boolean  @default(false) // Consentimento para comunicações
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Loja {
  id                String   @id @default(uuid())
  userId            String   @unique // Relacionamento 1:1 com User
  cnpj              String?  @unique // CNPJ da loja
  nomeEmpresa       String   // Nome fantasia da empresa (obrigatório)
  cidade            String?  // Cidade da loja
  estado            String?  // Estado da loja
  nomeResponsavel   String?  // Nome completo do responsável
  telefoneResponsavel String? // Telefone do responsável
  foto              String?  // Caminho/URL da foto da empresa (proporção 1:1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  cupons Cupom[] // Cupons gerados pela loja
}

model Cupom {
  id                String   @id @default(uuid())
  lojaId            String   // ID da loja que gerou o cupom
  codigo            String   @unique // Código único do cupom (template)
  tipo              String   // 'valor', 'percentual', 'brinde'
  valor             Float?   // Valor do desconto (para tipo 'valor' ou 'percentual')
  descricao         String?  // Descrição do brinde (para tipo 'brinde')
  quantidade        Int      // Quantidade de cupons a gerar
  validadeDias      Int      // Dias de validade a partir da criação
  dataExpiracao     DateTime // Data de expiração calculada
  visivel           Boolean  @default(true) // Se o cupom está visível para clientes
  status            String   @default("ativo") // 'ativo', 'usado', 'expirado'
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  loja Loja @relation(fields: [lojaId], references: [id], onDelete: Cascade)
  cuponsIndividuais CupomIndividual[] // Cupons individuais gerados a partir deste template
}

model CupomIndividual {
  id                String   @id @default(uuid())
  cupomId           String   // ID do cupom template
  codigo            String   @unique // Código único do cupom individual
  telefone          String?  // Telefone do cliente (opcional)
  cpf               String?  @unique // CPF do cliente (opcional e único)
  email             String?  @unique // E-mail do cliente (opcional e único)
  dataAtribuicao    DateTime? // Data em que foi atribuído ao cliente
  status            String   @default("disponivel") // 'disponivel', 'usado', 'expirado'
  dataExpiracao     DateTime // Data de expiração calculada
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  cupom Cupom @relation(fields: [cupomId], references: [id], onDelete: Cascade)

  @@unique([cupomId, telefone]) // Um telefone pode ter apenas um cupom por template
  @@unique([cupomId, email]) // Um email pode ter apenas um cupom por template
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
